{
  "name": "@xbl/raml-mocker",
  "version": "1.1.6-beta",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "copy-assets": "ts-node build/copy",
    "clean": "ts-node build/clean",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc && npm run chmod && npm run copy-assets",
    "lint": "tslint -c tslint.json 'src/**/*.ts' ./test/**/*.ts",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' ./test/**/*.ts --fix",
    "chmod": "chmod +x ./dist/bin/*",
    "test": "nyc ava --fail-fast -v",
    "test:watch": "ava --watch --fail-fast -v",
    "prepublish": "npm run build",
    "publish": "npm publish --access=public",
    "publish:next": "npm publish --access=public --tag next"
  },
  "main": "dist/index.js",
  "bin": {
    "raml-mocker": "./dist/bin/raml-mocker.js",
    "raml-runner": "./dist/bin/raml-runner.js",
    "har-convert": "./dist/bin/har-convert.js"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text-summary",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "ajv": "^6.9.1",
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "express": "^4.16.3",
    "raml-1-parser": "^1.1.47"
  },
  "devDependencies": {
    "@types/node": "^11.9.3",
    "ava": "1.0.0-rc.1",
    "lodash": "^4.17.11",
    "nyc": "^13.2.0",
    "path-to-regexp": "^3.0.0",
    "prettier": "^1.15.1",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xbl/raml-mocker.git"
  },
  "keywords": [
    "raml",
    "mock server"
  ],
  "author": "xbl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xbl/raml-mocker/issues"
  },
  "homepage": "https://github.com/xbl/raml-mocker#readme",
  "description": "raml mock server"
}
